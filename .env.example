# Almighty AI Assistant Environment Configuration

# =============================================================================
# API Keys and External Services
# =============================================================================

# Google Gemini AI API Key (Required)
# Get your API key from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_gemini_api_key_here

# OpenAI API Key (Optional - for additional AI features)
OPENAI_API_KEY=your_openai_api_key_here

# Make.com Webhook URLs (Optional - for automation)
MAKE_WEBHOOK_URL=your_make_webhook_url_here

# =============================================================================
# Database and Cache Configuration
# =============================================================================

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# =============================================================================
# Application Configuration
# =============================================================================

# Flask Environment
FLASK_ENV=production
FLASK_DEBUG=false

# Application URLs
API_BASE_URL=http://localhost:5000
FRONTEND_URL=http://localhost:3000
MOBILE_URL=http://localhost:3001

# =============================================================================
# Security Configuration
# =============================================================================

# JWT Secret Key (Generate a strong random key)
JWT_SECRET_KEY=your_jwt_secret_key_here

# Encryption Key (Generate a strong random key)
ENCRYPTION_KEY=your_encryption_key_here

# Session Secret
SESSION_SECRET=your_session_secret_here

# =============================================================================
# Email Configuration (Optional)
# =============================================================================

# SMTP Settings for email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_USE_TLS=true

# =============================================================================
# Voice and Audio Configuration
# =============================================================================

# Audio file storage path
AUDIO_STORAGE_PATH=/app/audio_cache

# Voice API settings
VOICE_API_ENABLED=true
TTS_CACHE_ENABLED=true

# =============================================================================
# Collaboration Features
# =============================================================================

# Team collaboration settings
MAX_TEAM_SIZE=50
MAX_TEAMS_PER_USER=10

# =============================================================================
# Analytics and Monitoring
# =============================================================================

# Analytics settings
ANALYTICS_ENABLED=true
METRICS_RETENTION_DAYS=90

# Logging level
LOG_LEVEL=INFO

# =============================================================================
# Performance and Scaling
# =============================================================================

# Worker processes
WORKERS=4
WORKER_TIMEOUT=120

# Cache settings
CACHE_ENABLED=true
CACHE_TTL=3600

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=100

# =============================================================================
# Development Settings
# =============================================================================

# Development mode (set to false in production)
DEBUG_MODE=false
TESTING_MODE=false

# CORS settings
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# =============================================================================
# Docker and Deployment
# =============================================================================

# Container settings
CONTAINER_PORT=5000
CONTAINER_WORKERS=2

# Health check settings
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# =============================================================================
# Feature Flags
# =============================================================================

# Enable/disable specific features
MULTILINGUAL_ENABLED=true
VOICE_INTERFACE_ENABLED=true
COLLABORATION_ENABLED=true
ANALYTICS_ENABLED=true
CUSTOM_TRAINING_ENABLED=true

# =============================================================================
# Third-party Integrations
# =============================================================================

# Social media API keys (optional)
FACEBOOK_API_KEY=
TWITTER_API_KEY=
LINKEDIN_API_KEY=

# Cloud storage (optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=

# =============================================================================
# Backup and Recovery
# =============================================================================

# Backup settings
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30

# =============================================================================
# Security Headers and HTTPS
# =============================================================================

# HTTPS settings
FORCE_HTTPS=false
SSL_CERT_PATH=/etc/ssl/certs/almighty-ai.crt
SSL_KEY_PATH=/etc/ssl/private/almighty-ai.key

# Security headers
SECURITY_HEADERS_ENABLED=true

